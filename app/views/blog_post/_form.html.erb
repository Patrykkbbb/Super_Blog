<%= form_with model: @blog_post do |form| %>
    <div>
      <%= form.label :title %>
      <%= form.text_field :title %>
      <% @blog_post.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
    <div>
      <%= form.label :content %>
      <%= form.rich_text_area :content %>
      <% @blog_post.errors.full_messages_for(:content).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
    <%= form.submit "Zapisz" %>
<% end %>