<p><%= t "devise.mailer.email_changed.hello" %> <%= @email %>!</p>

<% if @resource.try(:unconfirmed_email?) %>
  <p> <%= t "devise.mailer.email_changed.message_before" %> <%= @resource.unconfirmed_email %>.</p>
<% else %>
  <p> <%= t "devise.mailer.email_changed.message_after" %><%= @resource.email %>.</p>
<% end %>