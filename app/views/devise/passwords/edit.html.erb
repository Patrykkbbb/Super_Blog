<title><%= t "title.edit_password" %></title>
<hr>
<br>
<div class="container-register">
<h2 class="register-title"><%= t "devise.passwords.edit.info" %></h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
    <Br>
    <div class="field">
      <%= f.label :password %>, <%= t "devise.passwords.edit.label" %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> <%= t "devise.passwords.edit.min_info" %><)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control"%>
    </div>
    <br>
    <div class="field">
      <%= f.label :password_confirmation %>, <%= t "devise.passwords.edit.confirm" %> %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"%>
    </div>
    <br>
    <div class="actions">
      <%= f.submit (t("devise.passwords.edit.submit")), class: "btn btn-success" %>
    </div>
  <% end %>
  <br>
  <%= render "devise/shared/links" %>
<br>
</div>