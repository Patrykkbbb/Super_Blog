<title><%= t "title.login" %></title>
<hr>
<br>

<div class="container-register">
  <h2 class="register-title"><%= t "devise.sessions.new.login" %></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :"#{t "devise.sessions.new.email"}" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
    <br>
    <div class="field">
      <%= f.label :"#{t "devise.sessions.new.password"}" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>
    <br>
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :"#{t "devise.sessions.new.remember"}" %>
      </div>
    <% end %>
    <br>
    <div class="actions">
      <%= f.submit "#{t "devise.sessions.new.button"}", class: "btn btn-success" %>
    </div>
  <% end %>
  <br>
  <%= render "devise/shared/links" %>
  <br>
</div>