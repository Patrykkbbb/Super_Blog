<title><%= t "title.register" %></title>
<hr>
<br>
<div class="container-register">
  <h2 class="register-title"><%= t "devise.registrations.new.sign_up"%></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :"#{t "devise.registrations.new.nick_label"}" %><br />
      <%= f.text_field :nickname, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :"#{t "devise.registrations.new.email_label"}" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :"#{t "devise.registrations.new.pass_label"}" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> <%= t "devise.registrations.new.pass_helper"%>)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :"#{t "devise.registrations.new.confirm_label"}" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "#{t "devise.registrations.new.button"}", class: "btn btn-success" %>
    </div>
    <br>
  <% end %>

  <%= render "devise/shared/links" %>
  <br>
</div>
