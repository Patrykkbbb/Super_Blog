              <p><%= link_to (t ("application.body.login")), new_user_session_path %></p>
            </li>
            <li class="nav-item">
              <p><%= link_to (t ("application.body.signin")), new_user_registration_path %></p>
            </li>
          <% end %>
          </ul>
        </div>
