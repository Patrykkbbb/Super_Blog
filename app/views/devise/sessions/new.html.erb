<title><%= t "title.login" %></title>


<h2><%= t "devise.sessions.new.login" %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :"#{t "devise.sessions.new.email"}" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"#{t "devise.sessions.new.password"}" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :"#{t "devise.sessions.new.remember"}" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "#{t "devise.sessions.new.button"}" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
